<!-- view notes page -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meethi Supari | Dashboard </title>
    <!-- <link rel="stylesheet" href="indexxx.css"> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tiro+Devanagari+Hindi:ital@0;1&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            color: rgba(255, 255, 238, 0.949);
            background-color: black;
        }

        html,
        body {
            height: 100%;
            width: 100%;
        }

        ::-webkit-scrollbar {
            display: none;
        }

        /* header */
        #header {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 50px;
        }

        #header img {
            margin-top: 10px !important;
            width: 200px;
            height: 200px;
            border-radius: 50%;
        }

        header {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        header h1 {
            font-family: "Tiro Devanagari Hindi", serif;
        }

        header nav ul {
            display: flex;
            width: 30vw;
            justify-content: space-evenly;
        }

        header nav ul li {
            list-style-type: none;
        }

        /* header nav ul li a#a1 {
    animation: blink 1s ease-in-out 0s infinite;
} */
        header nav ul li a#a2 {
            text-decoration: underline;
            text-decoration-color: rgb(255, 0, 166);
            animation: blink 1s ease-in-out 0.25s normal;
        }

        /* header nav ul li a#a3 {
    animation: blink 1s ease-in-out 0.5s infinite;
} */
        header nav ul li a {
            text-decoration: none;
        }

        header nav ul li a:hover {
            text-decoration: none;
        }

        /* blink animation */
        @keyframes blink {
            0% {
                color: yellow;
            }

            50% {
                color: orangered;
            }

            100% {
                color: rgb(21, 162, 219);
            }
        }

        /* fonts */
        .tiro-devanagari hindi-regular {
            font-family: "Tiro Devanagari Hindi", serif;
            font-weight: 400;
            font-style: normal;
        }

        .tiro-devanagari hindi-regular-italic {
            font-family: "Tiro Devanagari Hindi", serif;
            font-weight: 400;
            font-style: italic;
        }

        /* other fonts, not used in page */
        @font-face {
            font-family: Alba;
            src: url(ALBA____.TTF);
        }

        /* #### Generated By: http://www.cufonfonts.com #### */

        @font-face {
            font-family: 'Mistral';
            font-style: normal;
            font-weight: normal;
            src: local('Mistral'), url('MISTRAL.woff') format('woff');
        }

        @font-face {
            font-family: ANR;
            src: url(ANR.ttf);
        }

        /* modal */
        #myModal {
            display: none;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 37%;
            width: 300px;
            height: 150px;
            overflow: auto;
            border-radius: 10px;
            border: 1px solid rgb(255, 0, 166);
        }

        .modal-content {
            /* background-color: #fefefe; */
            margin: 15% auto;
            /* padding: 20px; */
            /* border: 1px solid #888; */
            width: 300px;
            height: 150px;

            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
        }

        #cancel {
            padding: 5px 10px 5px 10px;
            margin: 5px;
            background-color: rgb(255, 0, 166);
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }
        #form2 button{
            padding: 5px 10px 5px 10px;
            margin: 5px;
            background-color: rgb(22, 22, 22);
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }
        #form2 button:hover{
            background-color: rgb(31, 29, 29);
        }
        #modalBtn {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
        }
        .modal-content p {
            text-align: center;
        }

        #badadiv {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        #badadiv h3 {
            margin: 20px;
            font-size: 20px;
            text-decoration: underline;
            text-decoration-color: rgb(255, 0, 166);
            animation: blink 1s ease-in-out 1.25s normal;
        }

        #form1 {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: rgb(12, 12, 12);
            border-radius: 5px;
            margin-bottom: 20px;
        }

        input[type="text"] {
            width: 30vw;
            padding: 12px;
            /* font-size: 10px; */
            color: white;
            background-color: rgb(23, 22, 22);
            border: 1px solid rgb(23, 22, 22);
            border-radius: 5px 5px 0 0;
        }

        textarea[id="body"] {
            width: 30vw;
            padding: 12px;
            /* font-size: 10px; */
            color: white;
            background-color: rgb(23, 22, 22);
            border: 1px solid rgb(23, 22, 22);
            border-radius: 0 0 5px 5px;
        }

        input[type="text"]::placeholder {
            color: rgb(21, 162, 219);
        }

        textarea[id="body"]::placeholder {
            color: rgb(21, 162, 219);
        }

        /* remove outline */
        input[type="text"]:focus,
        textarea:focus {
            outline: none;
        }

        /* button in form1 */


        .buttons {
            padding: 10px;
            margin: 10px;
            background-color: rgb(255, 0, 166);
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }

        #buttonDelete {
            padding: 10px;
            background-color: rgb(255, 0, 166);
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }

    </style>
    
</head>

<body>
    <div id="header">
        <!-- <img src="ms-dashboard.png" alt="Meethi Supari"> -->
        <header>
            <h1 style="color: rgb(255, 0, 166);">मीठी सुपारी </h1>
            <h1 id="h1" style="color: rgb(21, 162, 219);">Meethi Supari</h1>
            <nav>
                <ul>
                    <li><a href="diary" id="a1">Diary</a></li>
                    <li><a href="poems" id="a2">Poetry</a></li>
                </ul>
            </nav>
        </header>
    </div>

    <div id="badadiv">
        <h3>
            <%= note.title %>
        </h3>
        <div id="note-section">
            <!-- <h2>Note Details</h2>
            <p><strong>Note ID:</strong>
                <%= noteID %>
            </p>
            <p><strong>Title:</strong>
                <%= note.title %>
            </p>
            <p><strong>Body:</strong>
                <%= note.body %>
            </p> -->

            <form action="/dashboard/item/<%= noteID %>?_method=PUT" method="POST" id="form1">
                <input type="text" id="title" name="title" value="<%= note.title %>" placeholder="Title">
                <textarea name="body" id="body" cols="30" rows="10" placeholder="Take a note..."><%= note.body %></textarea>
                <button type="submit" class="buttons">Update</button>
            </form>
        </div>
        <!-- Delete button -->
        <button onclick="openModal()" id="buttonDelete">Delete</button>
    </div>




    <!-- Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <p>Are you sure you want to delete this note?</p>
            <div id="modalBtn">
                <button onclick="closeModal()" id="cancel">Cancel</button>
                <form action="/dashboard/item-delete/<%= noteID %>?_method=DELETE" method="POST" id="form2">
                    <button type="submit">Yes, delete</button>
                </form>
            </div>
        </div>
    </div>
    </div>

    <script>
        // JavaScript functions to handle modal functionality
        function openModal() {
            document.getElementById("myModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("myModal").style.display = "none";
        }

    </script>
</body>

</html>